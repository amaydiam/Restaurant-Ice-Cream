<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_view_padding"
    android:clickable="true"
    cardview:cardBackgroundColor="@color/white"
    cardview:cardPreventCornerOverlap="false"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="4dp">


        <ImageView
            android:id="@+id/gambar_kategori_menu"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_placeholder" />

        <com.ad.restauranticecream.widget.RobotoLightTextView
            android:id="@+id/nama_kategori_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#90000000"
            android:ellipsize="end"
            android:gravity="right"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/white"
            android:textSize="26sp"
            tools:text="nama_kategori_menu" />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_half_vertical_margin"
            android:background="@drawable/dash_border"
            android:padding="@dimen/activity_half_vertical_margin"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="{fa-pencil}"
            android:textColor="@color/primary"
            android:textSize="20sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
